<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-docs</artifactId>
    <version>2.0.3-SNAPSHOT</version>
    <relativePath>../</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-docs-en_US</artifactId>
  <packaging>jdocbook</packaging>
  <name>TorqueBox Documentation (${translation})</name>
  <description>TorqueBox Documentation (${translation})</description>
  
  <properties>
    <translation>en_US</translation>
    <translation.dash>en-US</translation.dash>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>create-bundles</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/html.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
          <execution>
            <id>create-epub-stage1</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <attach>false</attach>
              <descriptors>
                <descriptor>src/main/assembly/epub.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/docbook/publish/en-US/pdf/${artifactId}.pdf</file>
                  <type>pdf</type>
                  <classifier />
                </artifact>
                <artifact>
                  <file>target/${artifactId}-epub.zip</file>
                  <type>epub</type>
                  <classifier />
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
  
    </plugins>
  </build>
  
</project>
